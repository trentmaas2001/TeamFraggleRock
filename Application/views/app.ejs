<!DOCTYPE html>
<html>

<!-- Pull in javasctipt and set logUser for session-->
<head>
  <script src="./bootstrap/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="app.css">
  <link rel="stylesheet" href="./bootstrap/css/bootstrap.min.css">
  <script src="app.js"></script>
  <title>&#10073; Team Fraggle Rock</title>
  <script>
    var logUser = '<%- name %>'
  </script>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar bg-success navbar-expand-lg navbar-dark">
    <span class="navbar-brand">MongoDB Editor and Quality Assurance</span>
    <form class='backButton' action="/logout?_method=DELETE" method="POST">
      <button class='btn btn-dark buttons' type="submit">Log Out</button>
    </form>
  </nav>
  <!-- Delete Row Modal -->
  <div class="modal fade" id="deleteRowModal" tabindex="-1" aria-labelledby="deleteRowModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="deleteRowModalLabel">Are you sure you want to Delete this item?</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button id="deleteRowButton" type="button" class="btn btn-danger" onclick='deleteFromDB()' data-bs-dismiss="modal">Delete</button>
        </div>
      </div>
    </div>
  </div>
  <!--table container holding table of documents-->
  <div id="grid-container">

    <div id="table-wrapper">
      <table id="data-table">
        <thead>
          <tr>
            <th class='col-2'>Actions</th>
            <th class='col-8'>Document Preview</th>
            <th class='col-2'>Status</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
      <!-- Add New Document Buton -->
      <div>
        <a href="newDoc"><button class='btn btn-success buttons'>Add New Document</button></a>
      </div>
    </div>
  </div>

</body>

</html>